<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/albumItemContainer"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/album_selector"
    android:orientation="horizontal"
    android:paddingLeft="30dp" >

    <FrameLayout
        android:layout_width="51dp"
        android:layout_height="71dp" >

        <ImageView
            android:id="@+id/imageOfAlbum"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/albumOverlay"
            android:layout_width="52dp"
            android:layout_height="50.5dp"
            android:layout_marginLeft="-1.165dp"
            android:layout_marginTop="9.5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/album_overlap_activate" />

        <!--
             <ImageView
            android:id="@+id/tabletOverlay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/album_overlap_activate"
            android:visibility="gone" />
        -->
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.cmst.cmstapp.CustomTextView
            android:id="@+id/albumName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/cmstText"
            android:textSize="@dimen/title_medium"
            android:textStyle="bold" />

        <com.cmst.cmstapp.CustomTextView
            android:id="@+id/albumDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/cmstGray" />
    </LinearLayout>

</LinearLayout>