<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/album_selector"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100" >

        <LinearLayout
            android:id="@+id/discoveryLeft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80" >

            <com.cmst.cmstapp.CustomTextView
                android:id="@+id/action_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="28dip"
                android:textColor="@color/cmstText"
                android:singleLine="true"
                android:textSize="@dimen/cmst_title_font" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/discoveryRight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20" >

            <ImageView
                android:id="@+id/discoverySelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bonjourarrow" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>